            $("#POItemContent").hide();

            itemQueryItemsCollection.editItem(itemQueryItemsCollection.currentItem);
            var item = itemQueryItemsCollection.currentEditItem;
            purchaseOrderItemId = 0;
            getItem(item.Id, 0);
